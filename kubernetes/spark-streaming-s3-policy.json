{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:ListBucketMultipartUploads",
        "s3:AbortMultipartUpload",
        "s3:ListMultipartUploadParts"
      ],
      "Resource": [
        "arn:aws:s3:::spark-streaming-source",
        "arn:aws:s3:::spark-streaming-source/*",
        "arn:aws:s3:::spark-streaming-dest",
        "arn:aws:s3:::spark-streaming-dest/*",
        "arn:aws:s3:::spark-streaming-check",
        "arn:aws:s3:::spark-streaming-check/*"
      ]
    }
  ]
}

